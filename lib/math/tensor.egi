;;;;; Tensor
;;;;;
;;;;;

(define $unit-tensor
  (lambda [$ns]
    (generate-tensor kronecker-delta ns)))

(define $scalar-to-tensor
  (lambda [$x $ns]
    (tensor-map (* $ x) (unit-tensor ns))))

(define $tensor-map
  (lambda [$f $t]
    (init-tensor (tensor-size t)
                 (map f (tensor-to-list t))
                 (tensor-index t))))