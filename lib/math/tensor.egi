;;;;; Tensor
;;;;;
;;;;;

(define $unit-tensor
  (lambda [$ns]
    (generate-tensor kronecker-delta ns)))

(define $scalar-to-tensor
  (lambda [$x $ns]
    (tensor-map (* $ x) (unit-tensor ns))))

(define $tensor-map
  (lambda [$fn $t]
    (| (tensor-size t)
       (map fn (tensor-to-list t))
       |)))
